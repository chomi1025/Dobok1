generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int                @id @default(autoincrement())
  email            String             @unique
  password         String
  name             String
  username         String             @unique
  role             String             @default("user") // "user" | "admin"
  phone            String?            @unique
  birthDate        DateTime
  address          Json?
  createdAt        DateTime           @default(now())

  // --- ê´€ê³„ ì„¤ì • ---
  orders           Order[]
  reviews          Review[]

  // ë¦¬ë·° ë‹µë³€ (ì–´ë“œë¯¼ì¼ ê²½ìš°)
  reviewReplies    ReviewReply[]

  // 1:1 ë¬¸ì˜ (Inquiry)
  inquiries        Inquiry[]
  inquiryReplies   InquiryReply[]     // ì–´ë“œë¯¼ì´ ì‘ì„±í•œ 1:1 ë¬¸ì˜ ë‹µë³€

  // ìƒí’ˆ Q&A (ProductQna)
  productQnas      ProductQna[]
  productQnaReplies ProductQnaReply[] // ì–´ë“œë¯¼ì´ ì‘ì„±í•œ ìƒí’ˆ Q&A ë‹µë³€
}

enum Role {
  USER
  ADMIN
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String
  parentId  Int?
  slug      String     @unique
  sortOrder Int?
  parent    Category?  @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: SetNull)
  children  Category[] @relation("CategoryToCategory")
  products  Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  price       Float
  stock       Int
  categoryId  Int
  createdAt   DateTime @default(now())
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]
  productQnas ProductQna[] // ìƒí’ˆ ë¬¸ì˜ ëª©ë¡ ì¶”ê°€
  cartItems CartItem[]   // ğŸ‘ˆ ì´ê±° ì¶”ê°€
}

model CartItem {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int      @default(1)
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id])
}


enum OrderStatus {
  PAYMENT_COMPLETE
  PREPARING
  SHIPPING
  DELIVERED
  CANCELLED
}

model Order {
  id          Int         @id @default(autoincrement())
  orderNumber String      @unique
  createdAt   DateTime    @default(now())
  total       Int
  status      OrderStatus
  userId      Int
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       OrderItem[]
}

model OrderItem {
  id           Int      @id @default(autoincrement())
  orderId      Int
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId    Int
  productName  String
  productImage String?
  optionText   String?
  unitPrice    Int
  quantity     Int
  totalPrice   Int
  createdAt    DateTime @default(now())
  reviews      Review[]
  claims       Claim[]
  product      Product @relation(fields: [productId], references: [id])
}

model Claim {
  id          Int    @id @default(autoincrement())
  claimNumber String @unique @default(uuid())
  claimType   ClaimType
  status      ClaimStatus @default(REQUESTED)
  requestedAt DateTime    @default(now())
  detail      String
  orderItemId Int?
  orderItem   OrderItem?  @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  reason      String?
  processedAt DateTime?
}

enum ClaimType {
  CANCEL
  RETURN
  EXCHANGE
}

enum ClaimStatus {
  REQUESTED
  APPROVED
  COMPLETED
  REJECTED
}

//ë¦¬ë·°
model Review {
  id          Int      @id @default(autoincrement())
  orderItemId Int
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id])
  userId      Int
  user        User @relation(fields: [userId], references: [id])
  rating      Int
  content     String
  createdAt   DateTime @default(now())
  images      String[] @default([])
  reply       ReviewReply? // 1:1 ë‹µë³€
  @@unique([orderItemId])
}

//ë¦¬ë·° ëŒ“ê¸€
model ReviewReply {
  id        Int      @id @default(autoincrement())
  reviewId  Int      @unique
  review    Review   @relation(fields: [reviewId], references: [id])
  adminId   Int
  admin     User     @relation(fields: [adminId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

//1:1ë¬¸ì˜
model Inquiry {
  id       Int      @id @default(autoincrement())
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
  content  String
  createdAt DateTime @default(now())
  replies  InquiryReply[]
}

//1:1ë¬¸ì˜ ëŒ“ê¸€
model InquiryReply {
  id        Int      @id @default(autoincrement())
  inquiryId Int
  inquiry   Inquiry  @relation(fields: [inquiryId], references: [id])
  adminId   Int
  admin     User     @relation(fields: [adminId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

//ìƒí’ˆ Qna
model ProductQna {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  isSecret  Boolean  @default(false)

  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  reply     ProductQnaReply?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductQnaReply {
  id           Int        @id @default(autoincrement())
  content      String     @db.Text
  productQnaId Int        @unique
  productQna   ProductQna @relation(fields: [productQnaId], references: [id], onDelete: Cascade)
  adminId      Int
  admin        User       @relation(fields: [adminId], references: [id])
  createdAt    DateTime   @default(now())
}