generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int                @id @default(autoincrement())
  email            String             @unique
  password         String
  name             String
  username         String             @unique
  role             String             @default("user") // "user" | "admin"
  phone            String?            @unique
  birthDate        DateTime
  address          Json?
  createdAt        DateTime           @default(now())

  // --- 관계 설정 ---
  orders           Order[]
  reviews          Review[]

  // 리뷰 답변 (어드민일 경우)
  reviewReplies    ReviewReply[]

  // 1:1 문의 (Inquiry)
  inquiries        Inquiry[]
  inquiryReplies   InquiryReply[]     // 어드민이 작성한 1:1 문의 답변

  // 상품 Q&A (ProductQna)
  productQnas      ProductQna[]
  productQnaReplies ProductQnaReply[] // 어드민이 작성한 상품 Q&A 답변
}

enum Role {
  USER
  ADMIN
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String
  parentId  Int?
  slug      String     @unique
  sortOrder Int?
  parent    Category?  @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: SetNull)
  children  Category[] @relation("CategoryToCategory")
  products  Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  price       Float
  stock       Int
  categoryId  Int
  createdAt   DateTime @default(now())
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]
  productQnas ProductQna[] // 상품 문의 목록 추가
}

enum OrderStatus {
  PAYMENT_COMPLETE
  PREPARING
  SHIPPING
  DELIVERED
  CANCELLED
}

model Order {
  id          Int         @id @default(autoincrement())
  orderNumber String      @unique
  createdAt   DateTime    @default(now())
  total       Int
  status      OrderStatus
  userId      Int
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       OrderItem[]
}

model OrderItem {
  id           Int      @id @default(autoincrement())
  orderId      Int
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId    Int
  productName  String
  productImage String?
  optionText   String?
  unitPrice    Int
  quantity     Int
  totalPrice   Int
  createdAt    DateTime @default(now())
  reviews      Review[]
  claims       Claim[]
  product      Product @relation(fields: [productId], references: [id])
}

model Claim {
  id          Int    @id @default(autoincrement())
  claimNumber String @unique @default(uuid())
  claimType   ClaimType
  status      ClaimStatus @default(REQUESTED)
  requestedAt DateTime    @default(now())
  detail      String
  orderItemId Int?
  orderItem   OrderItem?  @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  reason      String?
  processedAt DateTime?
}

enum ClaimType {
  CANCEL
  RETURN
  EXCHANGE
}

enum ClaimStatus {
  REQUESTED
  APPROVED
  COMPLETED
  REJECTED
}

//리뷰
model Review {
  id          Int      @id @default(autoincrement())
  orderItemId Int
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id])
  userId      Int
  user        User @relation(fields: [userId], references: [id])
  rating      Int
  content     String
  createdAt   DateTime @default(now())
  images      String[] @default([])
  reply       ReviewReply? // 1:1 답변
  @@unique([orderItemId])
}

//리뷰 댓글
model ReviewReply {
  id        Int      @id @default(autoincrement())
  reviewId  Int      @unique
  review    Review   @relation(fields: [reviewId], references: [id])
  adminId   Int
  admin     User     @relation(fields: [adminId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

//1:1문의
model Inquiry {
  id       Int      @id @default(autoincrement())
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
  content  String
  createdAt DateTime @default(now())
  replies  InquiryReply[]
}

//1:1문의 댓글
model InquiryReply {
  id        Int      @id @default(autoincrement())
  inquiryId Int
  inquiry   Inquiry  @relation(fields: [inquiryId], references: [id])
  adminId   Int
  admin     User     @relation(fields: [adminId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

//상품 Qna
model ProductQna {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  isSecret  Boolean  @default(false)

  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  reply     ProductQnaReply?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductQnaReply {
  id           Int        @id @default(autoincrement())
  content      String     @db.Text
  productQnaId Int        @unique
  productQna   ProductQna @relation(fields: [productQnaId], references: [id], onDelete: Cascade)
  adminId      Int
  admin        User       @relation(fields: [adminId], references: [id])
  createdAt    DateTime   @default(now())
}